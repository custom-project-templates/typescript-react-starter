{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable","es2015", "es2016", "es2018"],
    "jsx": "react",
    "esModuleInterop": true, // don't omit this, or react-testing-library will fail "Cannot read property 'createElement' of undefined"
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~images/*": ["./images/*"],
      "~pages/*": ["./pages/*"],
      "~components/*": ["./components/*"],
      "~hooks/*": ["./hooks/*"]
    }
  },
  "include": ["src", "__tests__", "__mocks__"],
  "exclude": ["node_modules"]
}
